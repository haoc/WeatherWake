<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs371m.weatherwake"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" /> -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cs371m.weatherwake.WeatherWakeMainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cs371m.weatherwake.preferences.AlarmEditorPreferenceActivity"
            android:label="@string/app_name"
            android:parentActivityName="cs371m.weatherwake.WeatherWakeMainActivity" >
            <meta-data
                android:name=".PARENT_ACTIVITY"
                android:value=".WeatherWakeMainActivity" />
        </activity>

        <service
            android:name="cs371m.weatherwake.service.AlarmService"
            android:label="@string/app_name"
            android:process=".alarm.serviceProcess" >
        </service>

        <receiver android:name="cs371m.weatherwake.service.AlarmServiceBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="cs371m.weatherwake.alert.AlarmWakeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>

        <receiver android:name="cs371m.weatherwake.alert.AlarmAlertBroadcastReceiver" >
        </receiver>
        <receiver android:name="cs371m.weatherwake.telephony.PhoneStateChangedBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <activity
            android:name="cs371m.weatherwake.AlarmEditorActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="cs371m.weatherwake.WeatherSettingsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="cs371m.weatherwake.ConditionsEditorActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>